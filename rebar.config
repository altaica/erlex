{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    locals_not_used,
    %exports_not_used,
    deprecated_function_calls,
    deprecated_functions
]}.

{profiles, [
    {lint, [
        {plugins, [rebar3_lint]}
    ]},
    {test, [
        {eunit_compile_opts, [export_all]},
        {ct_opts, [
            {dir, [
                "apps/hello_joe/test",
                "apps/traffic_light/test"
            ]}
        ]},
        {cover_enabled, true},
        {cover_excl_mods, [cohort]},
        {cover_opts, [verbose]}
    ]}
]}.

